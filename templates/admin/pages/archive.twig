{% extends "/admin/main.twig" %}

{% block content %}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Список Контактов</h4>
            </p>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th> Id </th>
                    <th> Ф.И.О. </th>
                    <th> Восстановление  </th>
                                  </tr>
                </thead>
                <tbody>
                {% for contact in contacts %}
                <tr>
                    <td> {{ contact.id }} </td>
                    <td> {{ contact.fio }}  </td>
                    <td><a href="contact/move/{{ contact.id }} ">Recovery</a></td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}