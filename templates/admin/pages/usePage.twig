{% extends "/admin/main.twig" %}
{% block content %}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Список Контактов</h4>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th> </th>
                    <th> № </th>
                    <th> Ф.И.О. </th>
                    <th> Номер телефона </th>
                    <th> Подробнее </th>
                </tr>
                </thead>
                <tbody>
                {% for contact in contacts %}
                <tr>
                <tr class="table-info">
                    <th><i class="mdi mdi-account-card-details"></i></th>
                    <td> {{ contact.id }} </td>
                    <td> {{ contact.fio }}  </td>
                    <td> {{ contact.fio }}  </td>
                    <td><a href="contact/show{{ contact.Id }} ">Подробнее</a></td>
                </tr>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}