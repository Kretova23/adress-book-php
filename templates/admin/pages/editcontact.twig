{% extends "/admin/main.twig" %}

{% block content %}
                       <div class="col-lg-4 mx-auto ">
                        <div class="auth-form-light text-left p-5 " style="background-color: #c64fea; border-radius: 15px;">
                            <div class="brand-logo">

                            </div>
                            <h4>Редактор</h4>

                            <form class="pt-3 " action="/panel/contact/edit" method="post">
                                <div class="form-group">
                                    <input type="text" name="SecondName" value="{{ contact.SecondName }}" class="form-control form-control-lg"  placeholder="Фамилия">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="name" class="form-control form-control-lg"  placeholder="Имя" value="{{ contact.name }}">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="ThirdName" value="{{ contact.ThirdName }}" class="form-control form-control-lg"  placeholder="Отчество">
                                </div>


                                <div class="form-group">
                                    <input type="text" name="Number" value="{{ contact.Number }}" class="form-control form-control-lg"  placeholder="Номер телефона">
                                </div>

                                <div class="form-group">
                                    <input type="text" name="City" value="{{ contact.City }}" class="form-control form-control-lg"  placeholder="Город">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="Adress" value="{{ contact.Adress }}" class="form-control form-control-lg"  placeholder="Адрес">
                                </div>
                                <div class="form-group">
                                    <input type="hidden" name="Id" value="{{ contact.Id }}" >
                                </div>



                                <div class="form-group">
                                    <input type="text" name="Category" value="{{ contact.Category }}" class="form-control form-control-lg"  placeholder="Фирма">
                                </div>

                                <div class="mt-3">
                                    <input type="submit" name="btnEdit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" value="Обновить">

                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/templates/admin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/templates/admin/assets/js/off-canvas.js"></script>
    <script src="/templates/admin/assets/js/hoverable-collapse.js"></script>
    <script src="/templates/admin/assets/js/misc.js"></script>
    <!-- endinject -->
    </body>
    </html>
{% endblock %}